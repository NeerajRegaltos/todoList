<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Tiudo - Register</title>
    <link rel="shortcut icon" href="/logo.png" type="image/x-icon">
</head>

<body style="background-color: rgb(98, 238, 203);">
    <div class="container" style="display: flex; justify-content: center; margin-top: 20px;">

        <form method="post" style="display: flex; flex-direction: column;">
            <h1>Register</h1>

            <p>
                <%= locals.errorMessage %>
            </p>

            <input type="email" placeholder="email" name="email" required
                style="text-transform: lowercase; width: 100%; margin: 10px 5px;">
            <input type="password" placeholder="password" name="password" required
                style="width: 100%; margin: 10px 5px;" id="password">
            <input type="password" placeholder="Confirm password" required style="width: 100%; margin: 10px 5px;"
                id="confPassword">

            <input type="submit" value="Register" style="width: 100%; margin: 10px 5px;" class="btn-primary">

            <a href="/login" style="text-decoration: none; ">Have an account?</a>
        </form>


    </div>





    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    -->
</body>

</html>

<script>
    const confPassword = document.getElementById("confPassword");
    const password = document.getElementById("password");
    if (password.value === confPassword.value) {
        res.redirect("/");
    } else {
        alert("Passwords Do not match.");
        return;
    }

</script>